<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="#484743"
              android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="45dp">

    <ImageButton
        android:id="@+id/favor_btn"
        android:src="@drawable/ic_grade_grey600_18dp"
        android:background="@null"
        android:layout_width="60dp"
        android:layout_height="match_parent"/>

    <ImageButton
        android:id="@+id/unread_btn"
        android:src="@drawable/ic_brightness_1_grey600_24dp"
        android:background="@null"
        android:layout_width="60dp"
        android:layout_height="match_parent"/>

    <ImageButton
        android:id="@+id/all_btn"
        android:src="@drawable/ic_subject_grey600_18dp"
        android:background="@null"
        android:layout_width="60dp"
        android:layout_height="match_parent"/>
</LinearLayout>